@model LetsTest.Models.UserLoginList
@{ 
    Layout = null;
}

<!------ Include the above in your HEAD tag ---------->
<div class="container" style="padding-top: 60px;">
    <div class="row">
        <!-- edit form column -->
        <form class="form-horizontal" role="form" action="~/UserProfile/UserProfileEdit" method="post" onsubmit="return validationregister()">
            <div class="form-group">
                <label class="col-md-1 control-label">Email:</label>
                <div class="col-md-3">
                    <input id="textemail" name="NAME" class="form-control" value="@Model.EMAIL" type="text" onkeyup="validateEmail()" required=" ">
                    <span id="emailsss" class="text-danger font-weight-bold"> </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-1 control-label">Contact:</label>
                <div class="col-md-3">
                    <input id="phonenumber" name="CONTACT" class="form-control" value="@Model.CONTACT" type="text">
                    <span id="phno" class="text-danger font-weight-bold"> </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input class="btn btn-primary" value="Save Changes" type="submit">
                    <span></span>
                    <input class="btn btn-default" value="Cancel" type="reset">
                </div>
            </div>
            @Html.Hidden("CREATED_AT", Model.CREATED_AT);
            @Html.Hidden("UPDATED_AT", Model.UPDATED_AT);
            @Html.Hidden("ID", Model.ID);
            @Html.Hidden("NAME", Model.NAME);
            @Html.Hidden("PASSWORD", Model.PASSWORD);
            @Html.Hidden("USERTYPE", Model.USERTYPE);


        </form>
    </div>
</div>

