@using LetsTest.Models
@{
    ViewBag.Title = "AddAddress";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    AlertModel alertMessage = TempData["AlertMessage"] as AlertModel;
}
<div class="container" style="margin-top:5%">
    @if (alertMessage != null)
    {
        @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertMessage)
    }
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success">
                <h4 class="display-4" style="font-size: 1.2rem;color: aliceblue;">
                    Address
                </h4>
            </div>
            <div class="card-body ">
                <form action="~/Home/AddAddress" method="post">
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationDefault01">Full name</label>
                            <input type="text" name="CUSTOMERNAME" class="form-control" id="validationDefault01 username" value="" required>
                            <span id="userss" class="text-danger font-weight-bold"> </span>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="validationDefault02">Address</label>
                            <input type="text" name="STREETADDRESS" class="form-control" id="validationDefault02" value="" required>
                        </div>

                    </div>
                    <div class="form-row">

                        <div class="col-md-12 mb-3">
                            <label for="validationDefault04">Choose City</label>
                            <select class="custom-select" id="validationDefault04" required>
                                <option selected disabled value="">Choose...</option>
                                <option>Lahore</option>
                            </select>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="validationDefault05">Mobile Number</label>
                            <input type="text" name="PHONE" class="form-control" id="validationDefault05" required>
                            <span id="phno" class="text-danger font-weight-bold"> </span>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>