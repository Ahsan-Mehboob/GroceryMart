@model IEnumerable<LetsTest.Models.AddressList>
@{
    ViewBag.Title = "ListAddress";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<a href="~/Home/AddAddress" type="button" class="btn btn-primary btn-lg btn-block col-md-12" style="margin-top:5%">Add New Address</a>

<table class="table table-hover" style="margin-bottom:2%">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Street Address</th>
            <th scope="col">City</th>
            <th scope="col">Contact</th>
            <th>Select Existing Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr class="dgdatarow" data-shippingid="@m.ID">
                <td>@m.CUSTOMERNAME</td>
                <td>@m.STREETADDRESS</td>
                <td>@m.CITY</td>
                <td>@m.CONTACT</td>
                <td><a href="@Url.Action("ShippingId",new { id = m.ID})" class="btn btn-primary btnselect">Select this</a></td>
            </tr>
        }
    </tbody>
</table>
