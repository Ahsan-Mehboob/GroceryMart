<script>
    $(document).ready(function () {
        $("#userss").hide();
        $("#phno").hide();

        var user_err = true;
        var phno_err = true;

        $("#username").keyup(function () {
            username_check();
        });

        function username_check() {
            var user_val = $("#username").val();
            var alphabets = /^[a-z][a-z\s]*$/;
            if (!alphabets.test(user_val)) {
                $("#userss").show();
                $("#userss").html("** Only Alphabets are allowed.");
                $("#userss").focus();
                $("#userss").css("color", "red");
                user_err = false;
                return false;
            }
            else {
                $("#userss").hide();
            }
        }

        $("#phonenumber").keyup(function () {
            Phno_check();
        });

        function Phno_check() {
            var phno_val = $("#phonenumber").val();

            if (phno_val == "" || phno_val == null) {
                $("#phno").show();
                $("#phno").html("** Please Enter Your Mobile Number");
                $("#phno").focus();
                $("#phno").css("color", "red");
                phno_err = false;
                return false;
            }
            else {
                $("#phno").hide();
            }
            var ph = /^[0-9]{11}$/;
            if (!ph.test(phno_val)) {
                $("#phno").show();
                $("#phno").html("** Please enter the valid Mobile number.");
                $("#phno").focus();
                $("#phno").css("color", "red");
                phno_err = false;
                return false;
            }
            else {
                $("#phno").hide();
            }
        }
    });
</script>
