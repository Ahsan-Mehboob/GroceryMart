@model IEnumerable<LetsTest.Models.AddtoCart>
@using LetsTest.Models
@{
    ViewBag.Title = "CheckOutdetails";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    AlertModel alertMessage = TempData["AlertMessage"] as AlertModel;
}

@using (Html.BeginForm("AddToOrder", "Home", FormMethod.Post))
{
    <div class="container" style="margin-top: 5%;">
        <h4 class="display-4" style="color: white;text-align: center;padding: 10px;background: rgb(2,0,36);background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(27,133,38,1) 100%);">Checkout Page</h4>
        @if (alertMessage != null)
        {
            @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertMessage)
        }
        <div style="display:flex;flex-direction:column; justify-content:center;">
            <a href="~/Home/ListAddress" type="button" style="width:48.5%;align-self:center;margin-bottom:1%" class="btn btn-success btn-lg align-items-center">Select from existing Address</a>
            <div class="row">
                <div class="col-md-6 center-block">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h4 class="display-4" style="font-size: 1.2rem;color: aliceblue;">
                                Products Summary
                            </h4>
                        </div>
                        @{
                            int Total = 0;
                            int TotalQ = 0;
                        }
                        @foreach (var prod in Model)
                        {
                            int lineTotal = Convert.ToInt32(prod.Quantity * prod.UnitPrice);
                            Total = Convert.ToInt32(@Total + lineTotal);

                            TotalQ += prod.Quantity;
                            <div class="card-body">
                                <ul class="list-group mb-10">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <h5>@prod.ItemName</h5>

                                        <input id="quant" style="width:30px; border-radius:50%; text-align:center; background-color:gray; border:none; color:white" name="Quantity" type="text" placeholder="@prod.Quantity" value="@prod.Quantity" />

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center" style="font-weight:600">

                                        <p class="mb-1">@prod.StoreName</p>
                                    </li>
                                </ul>
                            </div>
                            @Html.Hidden("price", prod.UnitPrice, new { @id = "price" });
                            @Html.Hidden("Product_ID", @prod.ItemId);
                        }
                        <div style="display: flex; flex-direction: row; justify-content: space-between; margin-top: 20px;">
                            <button type="button" class="btn btn-light">Total Amount</button>
                            <input class="form-control" id="totall" name="Amount" style="width:20%" value="@Total" />
                        </div>

                        @*<div>
                            <div class="" style="margin-top: 20px;display: flex; flex-direction: row; justify-content: space-between;">
                                <div class="form-group mb-2" style="width:80%">
                                    <label for="staticEmail2" class="sr-only">Voucher Code</label>
                                    <input style="border: 1px solid black;" type="text" class="form-control-plaintext" id="staticEmail2" value="">
                                </div>

                                <button id="voucher" type="submit" class="btn btn-success mb-2">Enter Code</button>
                            </div>
                        </div>*@
                        @Html.Hidden("TotalQuantity", TotalQ)

                    </div>
                    <button type="submit" class="btn btn-success btn-block mb-2">Place Order</button>
                </div>
            </div>
        </div>


    </div>
}
