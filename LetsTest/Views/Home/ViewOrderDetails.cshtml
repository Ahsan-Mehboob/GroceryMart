@model IEnumerable<LetsTest.Models.OrderDetails>
@{
    ViewBag.Title = "ViewOrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-8 col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h4>Order Details</h4>
                    </div>
                </div>
                @{ 
                    int Total = 0;
                }
                @foreach (var m in Model)
                {
                    int lineTotal = Convert.ToInt32(m.QUANTITY * m.PRICE);
                    Total = Convert.ToInt32(@Total + lineTotal);
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-2">
                                <img class="img-responsive rounded" style="width:50px; height:50px" src="@m.IMAGE1">
                            </div>
                            <div class="col-xs-4">
                                <h6 class="product-name"><strong style="color:black">@m.NAME</strong></h6>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6 style="margin-top:15px;"><strong style="color:black;  font-size:1.0rem" >@m.PRICE  <span class="font-weight-bold">x</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control rounded" style="outline:none;background-color:transparent; border:2px solid #0094ff; border-radius:10px; width:30%; font-size:1.3rem;font-weight:bold;" value="@m.QUANTITY" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="pull-right text-right">Total <strong>&nbsp;&nbsp;@Total</strong></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>