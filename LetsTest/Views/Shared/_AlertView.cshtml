@using LetsTest.Models
@model AlertModel

@if (Model != null)
{
    <div class="alert alert-dismissible @Model.CSSClass" style="text-align:center; width:50%">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@Model.Heading</strong> @Model.Message
    </div>
}